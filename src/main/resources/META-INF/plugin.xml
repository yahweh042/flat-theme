<idea-plugin>
    <id>org.example.flat-theme</id>
    <name>Flat Theme</name>
    <vendor email="yahweh042@163.com" url="https://github.com/yahweh042/flat-theme">Yahweh</vendor>

    <description>
        <![CDATA[
            Dark Flat theme based on 'Darcula Dark'
            <br/><br/>
            <br/><br/><br/>
            <img src="https://raw.githubusercontent.com/yahweh042/flat-theme/master/screenshots/screenshot-20220401-203505.png" border="0" width="700" alt="Main window screenshot">
            <br/>
            <img src="https://raw.githubusercontent.com/yahweh042/flat-theme/master/screenshots/screenshot-20220401-203339.png" border="0" width="700" alt="Settings screenshot">

            2022-04-01:
            <br/>
            初始化主题插件，添加flat主题

            2022-06-01:
            <br/>
            添加新的IDE主题和编辑器主题 flat-dark

        ]]>
    </description>

    <idea-version since-build="211"/>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <themeProvider id="flat" path="/theme/flat.theme.json"/>
        <themeProvider id="flat-dark" path="/theme/flat-dark.theme.json"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>

    <applicationListeners>
        <!-- Add your application listeners here -->
    </applicationListeners>
</idea-plugin>
